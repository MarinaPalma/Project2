{{#each travels}}

  <p>{{title}}</p>
  <p>{{country}}</p>
  <img src="{{countryFlag}}" alt="" />
  <p>{{month}}</p>
  <p>{{year}}</p>
  <p>{{description}}</p>
  <p><img src="{{imageUrl.[0]}}" alt="" /></p>
  <a href="/travels/{{_id}}/edit">Edit</a>

  <p><form action="/travels/{{_id}}/delete" method="post">
      <button class="delete" type="submit">Delete</button>
    </form></p>

  <a href="/travels/{{_id}}/details">View details trip</a>
{{/each}}

